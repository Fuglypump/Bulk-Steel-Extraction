<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<RecipeDef>
		<defName>BulkExtractMetalFromSlag</defName>
		<label>smelt metal from slag (x3)</label>
		<description>Use heat and strong electromagnets to separate useful metal from three slag chunks at once.</description>
		<jobString>Smelting metal from slag.</jobString>
		<workAmount>4080</workAmount>
		<workSpeedStat>SmeltingSpeed</workSpeedStat>
		<effectWorking>Smelt</effectWorking>
		<soundWorking>Recipe_Smelt</soundWorking>
		<ingredients>
		  <li>
			<filter>
			  <thingDefs>
				<li>ChunkSlagSteel</li>
			  </thingDefs>
			</filter>
			<count>3</count>
		  </li>
		</ingredients>
		<products>
		  <Steel>30</Steel>
		</products>
		<fixedIngredientFilter>
		  <thingDefs>
			<li>ChunkSlagSteel</li>
		  </thingDefs>
		</fixedIngredientFilter>
		<recipeUsers>
			<li>ElectricSmelter</li>
		</recipeUsers>
	</RecipeDef>

	<RecipeDef>
		<defName>ExtractMetalFromDebris</defName>
