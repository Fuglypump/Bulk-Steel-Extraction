		<workAmount>1600</workAmount>
		<workSpeedStat>SmeltingSpeed</workSpeedStat>
		<effectWorking>Smelt</effectWorking>
		<soundWorking>Recipe_Smelt</soundWorking>
		<ingredients>
		  <li>
			<filter>
			  <thingDefs>
				<li>ChunkLimestone</li>
				<li>ChunkGranite</li>
				<li>ChunkSandstone</li>
				<li>ChunkSlate</li>
				<li>ChunkMarble</li>
			  </thingDefs>
			</filter>
			<count>1</count>
		  </li>
		</ingredients>
		<products>
		  <Steel>10</Steel>
		</products>
		<fixedIngredientFilter>
		  <thingDefs>
			<li>ChunkLimestone</li>
			<li>ChunkGranite</li>
			<li>ChunkSandstone</li>
			<li>ChunkSlate</li>
			<li>ChunkMarble</li>
		  </thingDefs>
		</fixedIngredientFilter>	
		<recipeUsers>
			<li>ElectricSmelter</li>
		</recipeUsers>
	</RecipeDef>
	
